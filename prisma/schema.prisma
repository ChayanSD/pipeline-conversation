generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(cuid())
  name            String
  email           String  @unique
  passCode        String
  companyId       String
  primaryColor    String
  secondaryColor  String?
  profileImageUrl String?
  companyRole     String?
  role UserRole @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relations
  company      Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  sentInvites     Invitation[] @relation("InvitedBy")
  presentations Presentation[]
  tests         Test[]
  sharedAudits SharedAudit[]

  @@index([email])
  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

model Company {
  id        String   @id @default(cuid())
  name      String
  logoUrl   String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Relations
  invites   Invitation[]
  users     User[]
  @@index([name])
  @@map("companies")
}

model Invitation {
  id            String        @id @default(cuid())
  email         String
  companyId     String
  token         String        @unique
  invitedById   String
  role          UserRole      @default(USER)
  status        InviteStatus  @default(PENDING)
  expiresAt     DateTime
  presentationId String?       // Link to specific audit/presentation
  createdAt     DateTime      @default(now())

  // Relations
  company       Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  invitedBy     User          @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)
  presentation  Presentation? @relation(fields: [presentationId], references: [id], onDelete: Cascade)

  @@map("invitations")
}

enum InviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

model Presentation {
  id         String       @id @default(cuid())
  userId     String
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  title      String
  categories Category[]
  tests      Test[]
  summary    Summary?
  invitations Invitation[]
  sharedWith SharedAudit[]
  auditProgress AuditProgress?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
  @@map("presentations")
}

model Category {
  id             String          @id @default(cuid())
  name           String
  icon           String?
  presentationId String
  presentation   Presentation    @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  questions      Question[]
  categoryScores CategoryScore[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([name])
  @@map("categories")
}

model Question {
  id         String   @id @default(cuid())
  text       String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  options    Option[]
  answers    Answer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("questions")
}

model Option {
  id         String   @id @default(cuid())
  text       String
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  points     Int      @default(0)
  answers    Answer[]

  @@map("options")
}

model CategoryScore {
  id         String   @id @default(cuid())
  testId     String
  test       Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  score      Int      @default(0)

  @@map("category_scores")
}

model Test {
  id             String          @id @default(cuid())
  userId         String
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  presentationId String
  presentation   Presentation    @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  categoryScores CategoryScore[]
  answers        Answer[]
  totalScore     Int             @default(0)
  createdAt      DateTime        @default(now())

  @@map("tests")
}

model AuditProgress {
  id             String        @id @default(cuid())
  presentationId String        @unique
  presentation   Presentation  @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  answers        Json          @default("{}")
  updatedBy      String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("audit_progress")
}

model Answer {
  id         String   @id @default(cuid())
  testId     String
  test       Test     @relation(fields: [testId], references: [id], onDelete: Cascade)
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  optionId   String
  option     Option   @relation(fields: [optionId], references: [id], onDelete: Cascade)
  points     Int      @default(0)

  @@map("answers")
}

model Summary {
  id                    String      @id @default(cuid())
  presentationId        String      @unique
  presentation          Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  categoryRecommendations String?     // { categoryId: string, recommendation: string }[]
  nextSteps             String?        // [{ type: 'text' | 'file', content: string, fileUrl?: string }]
  overallDetails        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("summaries")
}

model SharedAudit {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  presentationId String
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  sharedById     String       // User who shared the audit
  createdAt      DateTime     @default(now())

  @@unique([userId, presentationId]) // Prevent duplicate shares
  @@map("shared_audits")
}
